<% layout('layouts/boilerplate')%> 

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h2 class="card-title">Edit Profile</h2>
                </div>
                <div class="card-body">

                    <form action="/profile" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control shadow-none" type="text" id="username" name="username" value="<%=currentUser.username%>" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control shadow-none" type="email" id="email" name="email" value="<%=currentUser.email%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-grid">
                                <button class="btn btn-success btn-primary-custom shadow-none">Save Changes</button>
                            </div>
                        </div>

                    </form>

                    <h2>Reset Password</h2>
                    <form action="/password" method="POST" class="needs-validation" novalidate>

                        <div class="mb-3">
                            <label class="form-label" for="password">Current Password</label>
                            <input class="form-control shadow-none" type="password" id="password" name="password" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="newPassword">New Password</label>
                            <input class="form-control shadow-none" type="password" id="newPassword" name="newPassword" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="repeatPassword">Repeat Password</label>
                            <input class="form-control shadow-none" type="password" id="repeatPassword" name="repeatPassword" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div id="matchError" class="invalid-feedback">
                                New Password and Repeat Password must be match.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="d-grid">
                                <button class="btn btn-success btn-primary-custom shadow-none">Reset Password</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/script/editProfileValidation.js"></script>
